<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Access Group Tree -->
        <record id="view_access_group_tree" model="ir.ui.view">
            <field name="name">access.group.tree</field>
            <field name="model">access.group</field>
            <field name="arch" type="tree">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="is_active"/>
                    <field name="user_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        
        <!-- Access Group Form -->
        <record id="view_access_group_form" model="ir.ui.view">
            <field name="name">access.group.form</field>
            <field name="model">access.group</field>
            <field name="arch" type="form">
                <form string="Groupe d'Accès">
                    <sheet>
                        <div class="oe_title">
                            <h1>Configuration du Groupe d'Accès</h1>
                        </div>
                        <group name="basic_info" string="Informations de Base">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="is_active"/>
                            <field name="description"/>
                        </group>
                        <group name="access_control" string="Contrôle d'Accès">
                            <field name="view_ids" widget="many2many_tags"/>
                            <field name="default_access_mode"/>
                            <field name="domain_filter" placeholder="[('active', '=', True)]"/>
                        </group>
                        <group name="user_management" string="Gestion des Utilisateurs">
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Access Group Search -->
        <record id="view_access_group_search" model="ir.ui.view">
            <field name="name">access.group.search</field>
            <field name="model">access.group</field>
            <field name="arch" type="search">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_active"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
